{
    "app-id": "com.github.alainm23.byte",
    "base": "io.elementary.BaseApp",
    "base-version": "juno-22.08",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.alainm23.byte",
    "finish-args": [
        "--device=dri",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--metadata=X-DConf=migrate-path=/com/github/alainm23/byte/",
        "--talk-name=org.gtk.vfs.*",
        "--socket=pulseaudio",
        "--talk-name=org.gnome.SettingsDaemon.MediaKeys"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "taglib",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [{
                "type": "archive",
                "url": "https://github.com/taglib/taglib/archive/v1.12.tar.gz",
                "sha256": "b5a56f78a8bd962aaaec992b25a031f541b949b6eb30aa232bd6d5fa17cf8fa8"
            }]
        },
        {
            "name": "byte",
            "buildsystem": "meson",
            "build-options": {
                "config-opts": [
                    "--buildtype=release"
                ]
            },
            "sources": [{
                "type": "archive",
                "url": "https://github.com/alainm23/byte/archive/0.4.2.tar.gz",
                "sha256": "ea70db7a30f4a6bd4f252016f7cb8359d5b0c250a315ee5cce53e79bc0be055c"
            },
            {
                "type": "patch",
                "path": "appdata.patch"
            }]
        }
    ]
}
